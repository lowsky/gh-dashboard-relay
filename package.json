{
  "name": "dashboard",
  "version": "2.0.0",
  "description": "A web site showing the build states of all (feature) branches on one page.",
  "repository": {
    "type": "git",
    "url": "https://github.com/lowsky/dashboard.git"
  },
  "keywords": [
    "graphql",
    "relay",
    "react",
    "dashboard",
    "github"
  ],
  "engines": {},
  "scripts": {
    "dev": "rm -f .babelrc ; next dev",
    "build": "rm -f .babelrc ; next build",
    "start": "echo you may want to run `yarn dev` for local development... &&  next start",
    "build:relay": "relay-compiler && prettier -w relay/__generated__ queries/__generated__",
    "build:resolvers": "node schema/wrapGraphQLSchema && graphql-codegen --config schema/codegen.yml",
    "codegen": "yarn run build:relay && yarn run build:resolvers",
    "vercel-build": "yarn run vercel-build:without-chromatic && yarn run chromatic-test",
    "vercel-build:without-chromatic": "yarn run codegen && yarn run build:storybook && yarn run build",
    "lint": "eslint .",
    "test": "cp .babelrc.for.jest.json .babelrc ; jest --cache",
    "coverage": "yarn run test --coverage",
    "_test:ci": "mkdir -p test-reports && yarn run test:circleci",
    "_test:vis": "start-server-and-test 'yarn run storybook -- --quiet --ci' 9009 'cypress run --record'",
    "_test:storybook": "cypress run --record",
    "_test:circleci": "TEST_REPORT_FILENAME=test-reports/jest-junit.xml npm test -- --ci --testResultsProcessor=./node_modules/jest-junit-reporter --all --watch=false --watchAll=false --watchman false --forceExit",
    "chromatic-test": "chromatic --exit-zero-on-changes -d public/story-book --ci --allow-console-errors --exit-once-uploaded '*'",
    "storybook": "start-storybook -p 9009",
    "build:storybook": "build-storybook -o public/story-book --quiet",
    "disabled.build:storybook": "mkdir -p public/story-book && echo >public/story-book/index.html currently disabled"
  },
  "relay": {
    "src": ".",
    "language": "typescript",
    "exclude": [
      "/.next/**",
      "**/stuff/**",
      "**/node_modules/**",
      "**/test/",
      "**/__mocks__/",
      "**/__generated__/**"
    ],
    "schema": "./schema/schema.graphql"
  },
  "author": "Robert Hostlowsky",
  "license": "APACHE-2.0",
  "bugs": {
    "url": "https://github.com/lowsky/dashboard/issues"
  },
  "private": true,
  "analyze": true,
  "homepage": ".",
  "dependencies": {
    "@chakra-ui/react": "2.1.2",
    "@emotion/react": "11.9.0",
    "@emotion/styled": "11.8.1",
    "@envelop/core": "2.3.2",
    "@mdx-js/loader": "2.1.1",
    "@mdx-js/react": "2.1.1",
    "@next/mdx": "12.1.6",
    "@octokit/graphql-schema": "10.73.0",
    "@octokit/rest": "18.12.0",
    "fetch-multipart-graphql": "relay-tools/fetch-multipart-graphql",
    "framer-motion": "6.3.11",
    "graphql": "16.0.0-rc.7.experimental-stream-defer.4",
    "graphql-helix": "1.12.0",
    "next": "12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "relay-runtime": "13.2.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.18.2",
    "@chakra-ui/icons": "2.0.1",
    "@chakra-ui/storybook-addon": "3.0.2",
    "@chakra-ui/system": "2.1.1",
    "@fortawesome/fontawesome-svg-core": "1.3.0",
    "@fortawesome/free-brands-svg-icons": "5.15.4",
    "@fortawesome/free-solid-svg-icons": "5.15.4",
    "@fortawesome/react-fontawesome": "0.1.18",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.11",
    "@graphql-codegen/typescript-document-nodes": "2.2.11",
    "@graphql-codegen/typescript-operations": "2.4.0",
    "@graphql-codegen/typescript-resolvers": "2.6.4",
    "@graphql-tools/schema": "8.3.13",
    "@octokit/types": "6.34.0",
    "@storybook/addon-essentials": "6.5.5",
    "@storybook/addon-storyshots": "6.5.5",
    "@storybook/addons": "6.5.5",
    "@storybook/builder-webpack5": "6.5.5",
    "@storybook/manager-webpack5": "6.5.5",
    "@storybook/react": "6.5.5",
    "@types/react-dom": "18.0.5",
    "@types/react-relay": "13.0.2",
    "@types/relay-runtime": "13.0.3",
    "@typescript-eslint/eslint-plugin": "5.26.0",
    "@typescript-eslint/parser": "5.26.0",
    "babel-plugin-relay": "13.2.0",
    "chromatic": "6.5.4",
    "csstype": "3.1.0",
    "eslint": "8.16.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-graphql": "4.0.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-storybook": "0.5.12",
    "identity-obj-proxy": "3.0.0",
    "jest": "28.1.0",
    "prettier": "2.6.2",
    "react-relay": "13.2.0",
    "relay-compiler": "13.2.0",
    "relay-compiler-language-typescript": "15.0.1",
    "storybook-addon-next-router": "4.0.0",
    "ts-jest": "28.0.3",
    "typescript": "4.7.2",
    "webpack": "5.72.1"
  },
  "packageManager": "yarn@3.2.1"
}
